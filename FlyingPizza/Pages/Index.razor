@page "/"
@inject Services.RestDbSvc restPoint
@inject Services.GlobalDataSvc globalData
@inject Radzen.DialogService dialogService

<h1>Hello, world!</h1>

Welcome to your new app.

<br />
<button class="btn btn-primary">Btn 1</button>
<button class="btn btn-secondary">Btn 2</button>

<!--This code here just displays all the drone info.-->
<b class="textDisplay">
    @if (Fleet != null)
    {
        @foreach (var drone in Fleet)
        {
        <RadzenCard class="m-3">
            @drone.ToString()
             <RadzenButton Text="View Drone" Click=@(args => GoToDrone(drone))/>
        </RadzenCard>
            
        }
    }

</b>